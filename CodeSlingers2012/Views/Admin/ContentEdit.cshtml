@model CodeSlingers2012.Models.SectionContentModel

@{
    ViewBag.Title = "ContentEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit content</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Section)
        @Html.HiddenFor(model => model.SubSection)
        @Html.HiddenFor(model => model.SectionId)
        @Html.HiddenFor(model => model.SortOrder)

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ContentText)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.ContentText, new { @cols = 80, @rows = 5 })
            @Html.ValidationMessageFor(model => model.ContentText)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ContentUrl)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ContentUrl)
            @Html.ValidationMessageFor(model => model.ContentUrl)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ContentUrlText)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ContentUrlText)
            @Html.ValidationMessageFor(model => model.ContentUrlText)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ImageUrl)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ImageUrl)
            @Html.ValidationMessageFor(model => model.ImageUrl)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
